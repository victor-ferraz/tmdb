	assign  lane2_data                   =  vmeDataWordLane2;
	assign  lane3_cntl                   =  vmeCtrWordLane3;
	assign  lane3_data                   =  vmeDataWordLane3;
   assign  fragmentGenEn                =  vmeFragmentGenEn;
