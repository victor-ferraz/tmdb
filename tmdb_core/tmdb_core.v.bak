	assign  glink_pattern3               =  vmeGlinkPattern3;
   assign  reset_counter				    =  vmeGlinkCounterRst;
   assign  enable_counter				    =  vmeGlinkCounterEn;
   assign  trg_sel                      =  4'b1111;
end
