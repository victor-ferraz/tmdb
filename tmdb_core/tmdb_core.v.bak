// L1A Latency Register
localparam L1A_LATENCY_INDEX             = 5;
assign l1aLatency                        = oReg[L1A_LATENCY_INDEX][7:0];

// Source Identifier Register
localparam SRC_IDENTIFIER_INDEX          = 6;
